
export LC_ALL=en_US.UTF-8

export DERBY_HOME=$JAVA_HOME/db
export MAVEN_HOME=$HOME/soft/apache-maven
export ANT_HOME=$HOME/soft/apache-ant
export PATH=$PATH:$MAVEN_HOME/bin:$ANT_HOME/bin

export REBEL_HOME="$HOME/soft/jrebel"
export AS_HOME="$HOME/soft/glassfish3"
export PATH=$PATH:$AS_HOME/bin

export MONGO_HOME="$HOME/soft/mongodb"
export PATH=$PATH:$MONGO_HOME/bin

export METRO_HOME=$HOME/soft/metro

export ANDROID_SDK_HOME="$HOME/soft/android-sdk"
export PATH=$PATH:$ANDROID_SDK_HOME/tools:$ANDROID_SDK_HOME/platform-tools:$ANDROID_SDK_HOME/build-tools/22.0.1

export ASPECTJ_SDK_HOME="$HOME/soft/aspectj"
export PATH=$PATH:$ASPECTJ_SDK_HOME/bin

export NODE_HOME="$HOME/soft/node-js/"
export PATH=$PATH:$NODE_HOME/bin

export SBT_HOME="$HOME/soft/sbt"
export PATH=$PATH:$SBT_HOME/bin

export KAFKA_HOME="$HOME/soft/kafka"
export PATH=$PATH:$KAFKA_HOME/bin

export PATH=$PATH:$HOME/bin

export EDITOR=vim

# see https://github.com/ohmyzsh/ohmyzsh/issues/6835
export ZSH_DISABLE_COMPFIX=true

[[ -s "$HOME/.exports.local.$(hostname -s)" ]] && source "$HOME/.exports.local.$(hostname -s)"
